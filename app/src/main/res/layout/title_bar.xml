<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_bar_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Blue"
    tools:showIn="@layout/activity_add_new_item">

    <ImageButton
        android:id="@+id/hamburger_menu_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/clear"
        android:clickable="false"
        android:cropToPadding="false"
        android:onClick="hamburgerMenu"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/hamburger_btnxhdpi"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="63dp"
        android:layout_margin="15dp"
        android:background="@color/clear"
        android:src="@drawable/house_logoxhdpi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>